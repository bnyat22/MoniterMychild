<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView7"
       android:textAlignment="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Mettre les horaires de la semaine"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endroitSpec"
        android:hint="Nom de l'endroit"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        >
        <TextView
            android:id="@+id/samediText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="Samedi" />
        <EditText
            android:id="@+id/duSamedi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="true"
            android:hint="Du"
            android:inputType="time"
            android:focusableInTouchMode="false"
            android:layout_marginEnd="3dp"

            />
        <EditText
            android:id="@+id/ASamedi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:hint="À"
            android:inputType="time"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        >
        <TextView
            android:id="@+id/dimancheText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Dimanche" />
        <EditText
            android:id="@+id/duDimanche"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="true"
            android:hint="Du"
            android:inputType="time"
            android:focusableInTouchMode="false"
            android:layout_marginEnd="3dp"

            />
        <EditText
            android:id="@+id/Adimanche"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="30dp"
            android:hint="À"
            android:inputType="time"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        >
        <TextView
            android:id="@+id/lundiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:text="Lundi" />
        <EditText
            android:id="@+id/duLundi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="true"
            android:hint="Du"
            android:inputType="time"
            android:focusableInTouchMode="false"
            android:layout_marginEnd="3dp"

          />
        <EditText
            android:id="@+id/ALundi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="À"
            android:layout_marginLeft="30dp"
            android:inputType="time"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
         />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/marditext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Mardi" />
        <EditText
            android:id="@+id/DuMardi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="true"
            android:hint="Du"
            android:inputType="time"
            android:focusableInTouchMode="false"
      />

        <EditText
            android:id="@+id/Amardi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"

            android:clickable="true"
            android:hint="À"
            android:inputType="time"
            android:focusableInTouchMode="false"
            android:focusable="true" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/mercrediText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:text="Mercredi" />
        <EditText
            android:id="@+id/DuMercredi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="true"
            android:hint="Du"
            android:inputType="time"
            android:focusableInTouchMode="false"
        />

        <EditText
            android:id="@+id/Amercredi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="true"
            android:hint="À"
            android:focusableInTouchMode="false"
            android:inputType="time"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/jeudiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="54dp"
            android:text="Jeudi"
           />
        <EditText
            android:id="@+id/duJeudi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="true"
            android:hint="Du"
            android:inputType="time"
            android:focusableInTouchMode="false"
         />

        <EditText
            android:id="@+id/Ajeudi"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="true"
            android:hint="À"
            android:inputType="time"
            android:focusableInTouchMode="false"

    />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/vendrediText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="33dp"
        android:text="Vendredi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/duVendredi"
 />
    <EditText
        android:id="@+id/duVendredi"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:ems="10"
        android:hint="Du"
        android:inputType="time"
        android:focusableInTouchMode="false"
   />
    <EditText
        android:id="@+id/Avendredi"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:hint="À"
        android:inputType="time"
        android:focusableInTouchMode="false"
  />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="40dp">
    <Button
        android:id="@+id/ecoleConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
        android:layout_marginLeft="49dp"
        android:text="Confirmer"
   />
    <Button
        android:id="@+id/fermerPopup"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:text="Fermer"
  />
</LinearLayout>
</LinearLayout>