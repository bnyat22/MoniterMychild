<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LocaliserMonEnfant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorPrimaryVariant">@color/Blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">@color/blue_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="drawerArrowStyle">@style/ToolBarStyle</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ToolBarStyle" parent="Theme.LocaliserMonEnfant.NoActionBar">
        <item name="colorControlNormal">@color/blue_800</item>
    </style>

    <style name="Theme.LocaliserMonEnfant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>

    </style>
    <style name="navigationTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/orange_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="Theme.LocaliserMonEnfant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LocaliserMonEnfant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>